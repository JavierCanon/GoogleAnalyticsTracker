<Alloy>
    <Collection src="piwikReports" instance="true" id="reportsCollection"/>

    <TableView id="reportsTable" onClick="doSelectReport">
        <HeaderView formFactor="tablet">
            <View class="header">
                <View class="websitePicker">
                    <Require src="website_picker" onSelected="hideLeftSidebar"/>
                </View>
                <View class="segmentPicker">
                    <Require src="segment_picker" onSelected="hideLeftSidebar"/>
                </View>
                <View class="datePicker">
                    <Require src="date_picker" onSelected="hideLeftSidebar"/>
                </View>
            </View>
        </HeaderView>
    </TableView>
</Alloy>