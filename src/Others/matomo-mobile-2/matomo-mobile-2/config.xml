<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "org.piwik.mobile2"
        versionCode="1" 
        version   = "2.0.0">

    <name>Matomo Mobile 2</name>

    <description>
        Matomo is a downloadable, open source (GPL licensed) real time web analytics software program. It provides you with detailed reports on your website visitors: the search engines and keywords they used, the language they speak, your popular pages... and so much more. Piwik aims to be an open source alternative to Google Analytics. You can access these reports by using this mobile client.
    </description>

    <author href="https://matomo.org" email="mobile@matomo.org">
        The Matomo Team
    </author>

    <access origin="*" />

    <feature name="http://api.phonegap.com/1.0/network"/>

    <preference name="phonegap-version" value="3.1.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="false" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="true" />
    <preference name="android-minSdkVersion" value="8" />
    <preference name="android-installLocation" value="preferExternal" />
    <preference name="splash-screen-duration" value="0" />
    <preference name="load-url-timeout" value="45000" />

    <icon src="mobileweb/icon.png" />
    <icon src="mobileweb/icons/ios/icon-Small.png" gap:platform="ios" width="29" height="29" />
    <icon src="mobileweb/icons/ios/icon-Small-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="mobileweb/icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="mobileweb/icons/ios/icon-Small_at_2x.png" gap:platform="ios" width="58" height="58" />
    <icon src="mobileweb/icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="mobileweb/icons/ios/icon-Small-50_at_2x.png" gap:platform="ios" width="100" height="100" />
    <icon src="mobileweb/icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="mobileweb/icons/ios/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />

    <icon src="mobileweb/icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="mobileweb/icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="mobileweb/icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="mobileweb/icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

    <icon src="mobileweb/icons/bb/icon.png" gap:platform="blackberry" />

    <icon src="mobileweb/icons/winphone/icon.png" gap:platform="winphone" />
    <icon src="mobileweb/icons/winphone/tileicon.png" gap:platform="winphone" gap:role="background" />

    <icon src="mobileweb/icons/webos/icon.png" gap:platform="webos" />

    <gap:splash src="mobileweb/splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="mobileweb/splash/ios/Default_at_2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="mobileweb/splash/ios/Default_iphone5.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="mobileweb/splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="748" />
    <gap:splash src="mobileweb/splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1004" />

    <!-- retina iPad support: PhoneGap 2.5.0+ only -->
    <gap:splash src="mobileweb/splash/ios/Default-Landscape_at_2x.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="mobileweb/splash/ios/Default-Portrait_at_2x.png" gap:platform="ios" width="1536" height="2008" />

    <gap:splash src="mobileweb/splash/bb/splash.png" gap:platform="blackberry" />

    <gap:splash src="mobileweb/splash/winphone/splash.jpg" gap:platform="winphone" />
</widget>