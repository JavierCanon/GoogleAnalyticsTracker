<UserControl x:Class="UI.Controls.NotifyError"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Border Padding="5" BorderThickness="1" BorderBrush="LightBlue" Background="White">
        <StackPanel Orientation="Horizontal">
            <Image Height="32" Width="32" Source="notification.png"/>
            <TextBlock Name="MessageLabel" Margin="10,0,0,0" Width="150"  
            TextWrapping="Wrap" VerticalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
